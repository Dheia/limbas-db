function lmb_copy_report($report_id,$report_edit_id,$tab=null,$oldtab=null){
	global $db;
	global $session;
	global $umgvar;
	
	if($tab){
		$sqlquery = "SELECT * FROM LMB_REPORTS WHERE BERICHT_ID = $report_id AND TYP != 'tab' AND TAB = $oldtab ORDER BY EL_ID";
