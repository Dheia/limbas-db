							$error .= "\\nImageMagick failed!";
						}
					}
				}
				
				if(!$thumb){
					if(file_exists($uploadpath)){
						unlink($uploadpath);
					}
					$commit = 1;lmb_alert("$lang[1167]!\\n$error");
				}

			}
