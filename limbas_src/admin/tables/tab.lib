				}
				$userules = 1;
			}
		}

		# --- ref Integrität ----------------------------------------------
		#$sqlquery =  "ALTER TABLE $verkntab ADD FOREIGN KEY FK_".parse_db_string($gtable,18)."_ID (ID) REFERENCES ".parse_db_string($gtable,18)." ON DELETE RESTRICT";
		#$rs = lmbdb_exec($db,$sqlquery);
