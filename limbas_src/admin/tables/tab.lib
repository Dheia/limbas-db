/**
 * translate raw db field types to limbas parse_type
 * @param unknown $type
 * @return array
 */
function lmb_get_db_fieldtype($type)
{
    $parsetypes = array(
        'FIXED' => 1,
        'INTEGER' => 1,
        'SMALLINT' => 1,
        'VARCHAR' => 2,
        'LONG' => 2,
        'BOOLEAN' => 3,
        'DATE' => 4,
        'TIMESTAMP' => 4,
        'TIME' => 4,
        'FLOAT' => 6,
        'NUMERIC' => 6
    );
    return $parsetypes[$type];
}


/**
 * get limbas field type definition
 * @return array
 */
function lmb_get_fieldtypes($all=null) {
    global $db;
    global $lang;
    
    $sqlquery = "SELECT DISTINCT * FROM LMB_FIELD_TYPES WHERE DATA_TYPE NOT IN (18,31,32,43,48,41,47,13,38,46) AND DATA_TYPE < 100 AND DATA_TYPE > 0 ORDER BY SORT";
    if($all){
        $sqlquery = "SELECT * FROM LMB_FIELD_TYPES ORDER BY SORT";
    }
    
    $rs = lmbdb_exec($db,$sqlquery) or errorhandle(lmbdb_errormsg($db),$sqlquery,$action,__FILE__,__LINE__);
    while(lmbdb_fetch_row($rs)) {
    	$rid = lmbdb_result($rs, "ID");
    	$result_type["id"][$rid] = $rid;
    	$result_type["field_type"][$rid] = lmbdb_result($rs, "FIELD_TYPE");
    	$result_type["data_type"][$rid] = lmbdb_result($rs, "DATA_TYPE");
    	$result_type["parse_type"][$rid] = lmbdb_result($rs, "PARSE_TYPE");
    	$result_type["datentyp"][$rid] = lmbdb_result($rs, "DATENTYP");
    	$result_type["funcid"][$rid] = lmbdb_result($rs, "FUNCID");
    	$result_type["size"][$rid] = lmbdb_result($rs, "SIZE");
    	$result_type["hassize"][$rid] = lmbdb_result($rs, "HASSIZE");
    	$result_type["beschreibung"][$rid] = $lang[lmbdb_result($rs, "DATA_TYPE_EXP")];
    	$result_type["arg_result_datatype"][lmbdb_result($rs, "DATA_TYPE")] = $rid;
    	$result_type["md5tab"][$rid] = lmbdb_result($rs, "MD5TAB");
    	$result_type["verkntabid"][$rid] = lmbdb_result($rs, "VERKNTABID");
    }
    
    return $result_type;
}





/**
 * db field type conversion
 * @param int $source_parse_type
 * @param char $dest_type
 * @param char $table
 * @param bool $origin
 * @param string $raw
 * @param string $solve_dependency
 * @return boolean
 */
function lmb_convert_fieldtype($source_data_type, $source_parse_type, $source_fieldname, $source_field_size, $dest_type, $table, $raw = null, $solve_dependency = null){
    global $db;
    global $action;
    global $lang;
    global $DBA;

    // check & drop dependency views
    if ($solve_dependency and $depviews = lmb_checkViewDependency($table, $source_fieldname)) {
        // drop dependency views
        $dependency = lmb_dropDependViews($depviews);
    }
    
    // try db-based modify
    $sqlquery = dbq_15(array($DBA["DBSCHEMA"],$table,$source_fieldname,$dest_type));
    $rs = lmbdb_exec($db, $sqlquery);
    
    // manual modify
    if (!$rs) {

        lmb_StartTransaction();

        // error message
        $err = lmbdb_errormsg($db);
        lmb_alert($err);
        // check if dependency problem
        if (strpos($err, 'depends on')) {
            lmb_checkViewDependency($table, $source_fieldname, 1);
            return false;
        } else {
            lmb_alert("... unable to convert, trying to replace field $source_fieldname!");
        }
        
        // check if numeric
        if ($source_parse_type == 1 or $source_parse_type == 6) {
            $conversion = "NUM";
        } else {
            $conversion = "CHAR";
        }
        
        // copy field to LMB_TEMP_CONVERT
        #$sqlquery = "ALTER TABLE $table " . LMB_DBFUNC_ADD_COLUMN_FIRST . " LMB_TEMP_CONVERT " . $dest_type;
        $sqlquery = dbq_29(array($GLOBALS['DBA']['DBSCHEMA'],$table,'LMB_TEMP_CONVERT',$dest_type));
        $rs = lmbdb_exec($db, $sqlquery);
        if (! $rs) {
            #lmb_alert("Error in db-based modify: $errorFirstTry");
            lmb_alert("SQL Error in add temporay field!");
            return false;
        }
        
        // db-based update
        $sqlquery = "UPDATE $table SET LMB_TEMP_CONVERT = $conversion(" . $source_fieldname . ")";
        $rs = lmbdb_exec($db, $sqlquery);

        // manual modify
        if (! $rs and ($source_data_type and $source_data_type != 18 and $source_data_type != 31 and $source_data_type != 32 or $raw)) {
            $sqlquery = "SELECT ID," . $source_fieldname . " FROM $table";
            $rs = lmbdb_exec($db, $sqlquery) or errorhandle(lmbdb_errormsg($db), $sqlquery, $action, __FILE__, __LINE__);

            while (lmbdb_fetch_row($rs)) {
                // numeric
                if ($source_parse_type == 1) {
                    $value = parse_db_int(lmbdb_result($rs, $source_fieldname), $source_field_size);
                    // string
                } else if ($source_parse_type == 6) {
                    $value = parse_db_float(lmbdb_result($rs, $source_fieldname), $source_field_size);
                    // string
                } else {
                    $value = parse_db_string(lmbdb_result($rs, $source_fieldname), $source_field_size);
                }
                $prepare_string = "UPDATE $table SET LMB_TEMP_CONVERT = ? WHERE ID = " . lmbdb_result($rs, "ID");
                lmb_PrepareSQL($prepare_string, array($value), __FILE__, __LINE__);
            }
        }

        if (! $commit) {
            // drop origin
            $sqlquery = dbq_22(array($table,$source_fieldname));
            $rs = lmbdb_exec($db, $sqlquery) or errorhandle(lmbdb_errormsg($db), $sqlquery, $action, __FILE__, __LINE__);
            if (! $rs) {
                lmb_alert("SQL Error in drop origin: " . lmbdb_errormsg($db));
                $commit = 1;
            }
            // rename temp
            $sqlquery = dbq_7(array($DBA["DBSCHEMA"],$table,"LMB_TEMP_CONVERT",$source_fieldname));
            $rs = lmbdb_exec($db, $sqlquery) or errorhandle(lmbdb_errormsg($db), $sqlquery, $action, __FILE__, __LINE__);
            if (! $rs) {
                lmb_alert("SQL Error in rename temp: " . lmbdb_errormsg($db));
                $commit = 1;
            }
            
            //delete temp if already exists
            $sqlquery = dbq_22(array($table, 'LMB_TEMP_CONVERT'));
            $rs = lmbdb_exec($db, $sqlquery);
        }

        if($commit){
             lmb_EndTransaction(0);
        }else{
            lmb_EndTransaction(1);
        }
			
	}

	// add dependency views 
	if($solve_dependency AND $dependency){
        lmb_alert("try to dissolve dependencies:\n- ".implode("\n- ",$depviews));
        lmb_addDependViews($dependency);
	}
		
	if($commit){
         return false;
	}else{
        lmb_alert("field $source_fieldname successfully converted!");
		return true;
	}
}


