				$file["mimetype"] = $gmimetypes["mimetype"][lmbdb_result($rs, "MIMETYPE")];
				return $file;
			}else{
				return false;
			}
	}else{
		lmb_alert($lang[2189]." : (".lmbdb_result($rs, "NAME").")");
		return false;
	}
}





