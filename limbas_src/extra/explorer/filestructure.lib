/**
 * update countview of files in gtab dataset type upload
 *
 * @param unknown_type $gtabid
 * @param unknown_type $fieldid
 * @param unknown_type $datid
 * @return boolean
 */
function check_filecount($gtabid,$fieldid,$datid,$del=0){
	global $db;
	global $gtab;
	global $gfield;
	global $umgvar;

	$sqlquery = "SELECT COUNT(*) AS ANZAHL FROM LDMS_FILES WHERE TABID = $gtabid AND FIELDID = $fieldid AND DATID = $datid AND TYP = 3";
	$rs = lmbdb_exec($db,$sqlquery) or errorhandle(lmbdb_errormsg($db),$sqlquery,$action,__FILE__,__LINE__);
    $count = lmbdb_result($rs, "ANZAHL")-$del;

    if($gtab["table"][$gtabid] AND $gfield[$gtabid]["field_name"][$fieldid]) {
        $sqlquery = "UPDATE " . $gtab["table"][$gtabid] . " SET " . $gfield[$gtabid]["field_name"][$fieldid] . " = '".parse_db_int($count)."' WHERE ID = $datid";
        $rs = lmbdb_exec($db, $sqlquery) or errorhandle(lmbdb_errormsg($db), $sqlquery, $action, __FILE__, __LINE__);
    }

    return $count;

}

