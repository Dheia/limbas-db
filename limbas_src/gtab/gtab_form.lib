			$st = explode(";",$gform[$gformid]["style"][$key]);
			if($st[24]){ #overflow
				if($st[24] == 'scroll'){$st[24] = 'auto';} # scroll soll als auto behandelt werden
				$bt = "height:".$gform[$gformid]["height"][$key]."px;overflow:".$st[24];
