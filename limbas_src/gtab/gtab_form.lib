			}else{
				$ugresult = get_gresult($gform[$gformid]["tab_id"][$key],null,$filter,$gsr,$verkn,$onlyfield,$ID);
				form_gresult($ID,$gform[$gformid]["tab_id"][$key],$gform[$gformid]["tab_group"][$key],$ugresult); # need for fields of related tables
