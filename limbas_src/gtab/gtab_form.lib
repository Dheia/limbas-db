			$vuniqueid = "g_0_".$fieldid;
			$linklevel["tabid"] = $gtabid;
			$gsr = $filter["ext_RelationFields"]["searchval"][$vuniqueid];
			$vfilter["anzahl"][$gtabid] = "all";
			$vfilter["order"][$gtabid] = $filter["ext_RelationFields"]["order"][$vuniqueid];
			
