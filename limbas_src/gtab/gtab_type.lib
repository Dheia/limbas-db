		$rs1 = odbc_exec($db,$sqlquery1) or errorhandle(odbc_errormsg($db),$sqlquery1,$action,__FILE__,__LINE__);
		while(odbc_fetch_row($rs1)) {
			if(!$gfield[$gtabid]["unique"][$bzm]){echo "<li class=\"gtabBodyDetailValLI\">";}
			echo htmlentities(odbc_result($rs1, $field_name),ENT_QUOTES,$GLOBALS["umgvar"]["charset"]);
