	$verkn = set_verknpf($gtab_id,$field_id,$ID,is_numeric($change_value) ? array($change_value) : $change_value,$verkn_del,0,0);

	// ext-filesystem
	if($LID = $gfield[$gtab_id]["file_level"][$field_id]){
        $verkn["linkParam"]["LID"] = $LID;
	}

	// set relation
